{
  "timezone": "Europe/Berlin",
  "lockFileMaintenance": {
    "enabled": true
  },

  "prHourlyLimit": 1,
  "automerge": true,
  "automergeType": "pr-comment",
  "automergeComment": "lgtm",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["^vue"],
      "groupName": "merge with hazmat suit"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchSourceUrlPrefixes": ["https://github.com/polkadot-js/", "https://github.com/vue-polkadot/"],
      "groupName": "merge with hazmat suit",
      "enabled": false
    },
  ],
  "extends": [
    "config:base"
  ]
}


