{
  "timezone": "Europe/Berlin",
  "commitMessagePrefix": "[skip netlify]",
  "automerge": true,
  "automergeType": "pr-comment",
  "automergeComment": "lgtm",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "prHourlyLimit": 5,
  "enabledManagers": [
    "npm"
  ],
  "rangeStrategy": "bump",
  "updatePinnedDependencies": false,
  "schedule": [
    "before 3am on Monday"
  ],
  "packageRules": [
    {
      "groupName": "merge with hazmat suit extra",
      "enabled": false,
      "matchSourceUrls": [
        "https://github.com/polkadot-js/{/,}**",
        "https://github.com/vue-polkadot/{/,}**",
        "https://github.com/kodadot/packages{/,}**",
        "https://github.com/cloudacy/vue-markdown-render{/,}**",
        "https://github.com/FortAwesome/Font-Awesome{/,}**",
        "https://github.com/TypeStrong/ts-loader{/,}**"
      ]
    },
    {
      "groupName": "Bumped minor version of packages",
      "prHeader": "Bumped minor version of packages, check if builds are still passing, please ðŸ¥º",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ]
    },
    {
      "matchUpdateTypes": [
        "major",
        "pin"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "enabled": false
    }
  ]
}
